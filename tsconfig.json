{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@actors/*":["actors/*"],
            "@configs/*":["configs/*"],
            "@managers/*":["managers/*"],
            "@scenes/*":["scenes/*"],
            "@states/*":["states/*"],
            "@types/*":["types/*"],
            "@utils/*":["utils/*"],
            "@views/*":["views/*"],
        },
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"]
}
